<span class="W70 minH in left white Btan">
	<div class="W100">
		<div class='bordBlackT'>

			<span class='W33 minH in'></span>

			<span class='W33 minH in'>
				<span class='minH Bwhite pad05 bl'><h1 class="font48 fSig black W100 center"><%= @comic.title %></h1></span>
			</span>

			<span class='W33 minH in'></span>
		</div>
	</div>

	<div class="W100 minH20 Bblack up20 rel o20">
	</div>

	<div class="W100 left">
		<span class='left W10 in minH'>
		</span>

		<span class='left W80 in minH'>
			<br>
			<%= image_tag(@comic.image.url, {class: 'W100 bordBlackT Blttan'})  %>

			<div class="W100 in">

				<span class="W20 left minH in nowrap"></span>
				<span class="W60 left minH in nowrap beltline">

					<div class='W100 rel minH100'>
						<span class='abs up16'>
							<% if a = @comic.lastcom %>
								<%= link_to image_tag('/assets/b1.png', {class: 'in belt'}), comic_path( a ), {class: 'in '} %>
							<% else %>
								<%= image_tag('/assets/b1.png', {class: 'in belt' }) %>
							<% end %>

							<% if a = @comic.lastcom %>
								<%= link_to image_tag('/assets/b2.png', {class: 'in belt'}), comic_path( a ), {class: 'in '} %>
							<% else %>
								<%= image_tag('/assets/b2.png', {class: 'in belt' }) %>
							<% end %>


							<%= image_tag('/assets/b3.png', {class: 'in belt'}) %>

							<% if b = @comic.nextcom %>
								<%= link_to image_tag('/assets/b4.png', {class: 'in belt'}), comic_path( b ), {class: 'in '} %>
							<% else %>
								<%= image_tag('/assets/b4.png', {class: 'in belt'}) %>
							<% end %>

							<% if b = @comic.nextcom %>
								<%= link_to image_tag('/assets/b5.png', {class: 'in belt'}), comic_path( b ), {class: 'in '} %>
							<% else %>
								<%= image_tag('/assets/b5.png', {class: 'in belt'}) %>
							<% end %>

						</span>

					</div>

				</span>
				<span class="W20 left minH in nowrap"></span>

			</div>

			<% unless @taggy.empty? %>
				<div class='W100 in'>

					<span class="W5 left minH in"></span>

					<span class="W90 left minH in">
						<% @taggy.each do |tag| %>
								<%= link_to tag.word, tag_path(tag), {class: 'left pad05 Bblob blob in'} %>
						<% end %>
					</span>

					<span class="W5 left minH in"></span>
				</div>

			<% end %>
			
		</span>

		<span class='left W10 in minH'>
		</span>
	</div>
<br>

	<div class='black W100'>

	  <span class='W5 minH left'></span>

	  <span class='W90 minH left'>
			<%= render 'comments/show' %>
			<br>
			<br>

		</span>

	  <span class='W5 minH left'></span>

	</div>
	<div class='black W100'>
	  <div class='bordBlackT'>
			<%= render 'comments/new' %>
		</div>
	</div>
	<div class='black W100'>
	  <div class='bordBlackT'>
			<%= render 'newsies/index' %>

		</div>
	</div>

	<br>

</span>
