  <span class="pad2 Blttan  bl">
    <%= link_to "Add Comic", new_comic_comics_path, :remote => true %>

    <button id="mo-comic">asdfasdfasddfs</button>
  </span>
</span>

<span class='W100 in left'>

  <span class="pad2 Bwhite minH12em bl" id="the-comics">
      
    <div class=' inb Byell pad0  minH10em marg0 W80'>
      <%= render 'comics/new_comic' %>
    </div>

    <div class=' inb Blttan pad0 minH10em marg0 W20'>
      <span class="in W100 overf left pad5 white">
      </span>
    </div>
  </span>
</span>

<span style="width: 100%; min-height: 3.2em; height: 3.2em; display: block; float: left;"></span>

<span class='W100 in left'>
  <div class='pad5 bl Byell'>
    <h1 class='white Bblack pad2'>COMICS</h1>

    <% @comics.each do |a| %>
      <br>
      <div class="W100 left bord">
        <div class='Btan W45 left in'>
          <div>

            <h1 class='white pad2 in Bblack'><%= a.position %></h1><span class='Bblob pad05 break'><%= a.title %>::<span class='right'>  <%= link_to image_tag(a.image.url, {class: 'W10'}), comic_path(a), class: 'Bblob round bord black pad05 ' %> </span></span>

          </div>

          <div class='Bblack pad05 in left W5'>
            <span class="Bblob round bord black pad05 left"><%= link_to 'DELETE', comic_path(a), method: :delete, class: 'Bblob left round bord black pad05' %></span> <span class="left"><%= link_to 'EDIT', edit_comic_path(a), class: 'Bblob round bord black ' %></span>
          </div>
        </div>

        <div class="break left W45 pad2"><span class=' Byell'><%= a.desc %></span></div>
      </div>
      <br>

      <br>
    <% end %>
  </div>
  
  <div class='pad5 inb Byell'>
    <h1 class='white Bblack pad5'>NEWS</h1>
    <% @news.each do |a| %>
      <div class='Btan bl bordBlack'>
        <span class='Bblob pad2'><%= a.title %></span><span class='Byell'>::::::</span><div class='Bblack pad05 in'><%= link_to 'DELETE', newsy_path(a), method: :delete, class: 'blob pad05' %></div>

        <br>
        <br>
        <span class='Byell pad05'>
          <%= a.body %>
        </span>
        <span class='font8 white Bblack'><%= a.created_at %></span>
        <br>
        <br>

      </div>
      <br>
    <% end %>

  </div>
</span>


