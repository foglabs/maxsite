<div id="bar" class="W100 minH20 Bblack up20 rel o20 ">
</div>

<div class="W100 left">
	<span class='left W10 in minH'>
	</span>

	<span class='left W80 in minH'>
		<br>
		<%= image_tag(@comic.image.url, {class: 'W100 Blttan'})  %>
		<br>

		<div class="W100 in">

			<span class="W20 left minH in nowrap"></span>
			<span class="W60   minH in nowrap ">
				<% if a = @comic.lastcom %>
					<%= link_to image_tag('/assets/b1.png', {class: 'in belt W100 beltw1'}), comic_path( a ), {class: 'in '} %>
				<% else %>
					<%= image_tag('/assets/b1.png', {class: 'in belt W100 beltw1' }) %>
				<% end %>

				<% if a = @comic.lastcom %>
					<%= link_to image_tag('/assets/b2.png', {class: 'in belt W100 beltw2'}), comic_path( a ), {class: 'in '} %>
				<% else %>
					<%= image_tag('/assets/b2.png', {class: 'in belt W100 beltw2' }) %>
				<% end %>

				<%= image_tag('/assets/b3.png', {class: 'in belt W100 beltw3'}) %>

				<% if b = @comic.nextcom %>
					<%= link_to image_tag('/assets/b4.png', {class: 'in belt W100 beltw4'}), comic_path( b ), {class: 'in '} %>
				<% else %>
					<%= image_tag('/assets/b4.png', {class: 'in belt W100 beltw4'}) %>
				<% end %>

				<% if b = @comic.nextcom %>
					<%= link_to image_tag('/assets/b5.png', {class: 'in belt W100 beltw5'}), comic_path( b ), {class: 'in '} %>
				<% else %>
					<%= image_tag('/assets/b5.png', {class: 'in belt W100 beltw5'}) %>
				<% end %>

			</span>
			<span class="W20 left minH in nowrap"></span>

		</div>

		<% unless @taggy.empty? %>
			<div class='W100 in'>

				<span class="W5 left minH in"></span>

				<span class="W90 left minH in">
					<% @taggy.each do |tag| %>
							<%= link_to tag.word, tag_path(tag), {class: 'left pad05 Bblob blob in'} %>
					<% end %>
				</span>

				<span class="W5 left minH in"></span>
			</div>
		<% end %> 
		
	</span>

	<span class='left W10 in minH'>
	</span>
</div>

<div class='black W100'>
  <div class="W100">
    <div class='P1pt5'>
      <h1 class="bold black font18 pad05"></h1>
    </div>
  </div>

</div>

<div class='black W100'>
  <div class='bord'>

		<div class="W100">
		  <div class='lttan Bltan'>
		    <span class="P1pt5 W90 inb round Bwhite"><h1 class="pad05 bold black font18  in"><%= @comic.title %></h1> <h2 class="in font10"><%= @comic.format_time %></h2></span>
		  </div>
		</div>
		<div class="W100">
		  <div class='P2 lttan white'>
		    <span class="white fBodies pad05"><%= @comic.desc %></span><br>
		    <hr>
		    <span class="white font10"></span>
		  </div>
		</div>

		<%= render 'newsies/index' %>

	</div>
</div>

<div class='black W100'>

  <span class='W5 minH left'></span>

  <span class='W90 minH left'>
  </span>

  <span class='W5 minH left'></span>
</div>

<br>
<div class='black W100'>

  <span class='W5 minH left'></span>

  <span class='W90 minH left'>
    <%= render 'comments/new' %>
  </span>

  <span class='W5 minH left'></span>
</div>

<div class='black W100'>

  <span class='W5 minH left'></span>

  <span class='W90 minH left'>
    <%= render 'comments/show' %>
  </span>

  <span class='W5 minH left'></span>
</div>

<script type="text/javascript">
	document.getElementById('bar').width

</script>
