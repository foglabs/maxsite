
	<span class="W70 minH in left white Btan">
		<div class="W100">
			<div class='bord'>
				<h1 class="font24"><%= @comic.title %></h1>
			</div>
		</div>
		
		<div class="W100">
			<span class='left W10 in minH'>
			</span>

			<span class='left W80 in minH'>
				<br>
				<%= image_tag(@comic.img, class: 'W100 bord Blttan' ) %>
				<br>
				<br>
				<span><%= @comic.desc %></span>
				<br>
				<br>

				<% if a = @comic.lastcom %>
					<%= link_to "Previous", comic_path( a ), class: 'comButton, Blttan blob' %>
				<% end %>
				<% if b = @comic.nextcom %>
					<%= link_to "Next", comic_path( b ), class: 'comButton, Blttan blob' %>
				<% end %>
				<br>
				<br>
				
			</span>

			<span class='left W10 in minH'>
			</span>
		</div>

		<br>

	</span>

